set {
  $mod Mod4
  $alt Mod1
  $left h
  $down j
  $up k
  $right l

  # susumu by sblumentritt/settei
  $special      #303030
  $background   #3b3b3b
  $foreground   #f7e2d0
  $dark_gray    #454545
  $red          #f98e79
  $green        #c6bb8d
  $orange       #f3b785
  $blue         #a6b4ad
  $magenta      #e3a8a4
  $cyan         #acbcac
  $bright_white #e5dbd0
  $gray         #998f85
  $yellow       #e8bf8d

  $bin $XDG_CONFIG_HOME/sway/bin

  $app_idle swayidle -w
  $app_term $bin/shoe
  $app_mixer $app_term --app-id=termfloat ncpamixer
  $app_music $app_term --app-id=termfloat cmus

  # launch applications with fzf
  $app_menu exec $app_term --app-id=launcher bash -c $bin/fzf-menu

  $screencap_dir $HOME/Downloads
  $screenrec_file $screencap_dir/recording-$(date +'%Y-%m-%d-%H%M%S').mp4
  $screenshot_file $screencap_dir/screenshot-$(date +'%Y-%m-%d-%H%M%S').png

  $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
}

