set $mode_exit "‚å¨ [l]ock [e]xit [s]uspend [r]eload [h]ibernate [R]eboot [S]hutdown"

mode $mode_exit {
  bindsym {
    # lock screen
    l exec waylock -fork-on-lock, mode "default"

    # exit sway
    e exec swaymsg exit, mode "default"

    # suspend
    s exec systemctl suspend-then-hibernate, mode "default"

    # reload sway config
    r reload, mode "default"

    # hibernate
    h exec systemctl hibernate, mode "default"

    # reboot
    Shift+r exec systemctl reboot, mode "default"

    # shutdown
    Shift+s exec systemctl poweroff -i, mode "default"

    # return to default mode
    Escape mode "default"
    q mode "default"
  }
}

# launch exit mode
bindsym {
  $mod+Shift+e mode $mode_exit
  XF86PowerOff mode $mode_exit
}

