# set WAYLAND_DISPLAY/DISPLAY in systemd user environment, see: FS#63021
exec systemctl --user import-environment WAYLAND_DISPLAY DISPLAY SWAYSOCK WOBSOCK
exec hash dbus-update-activation-environment 2>/dev/null \
  && dbus-update-activation-environment --systemd WAYLAND_DISPLAY DISPLAY SWAYSOCK WOBSOCK

exec_always $app_idle

exec mako

exec mkfifo $WOBSOCK && tail --follow=$WOBSOCK | wob

exec $bin/wlsunset-with-config

# open terminal on startup
exec swaymsg 'workspace $ws1; exec $app_term'

# vim: set filetype=swayconfig foldmethod=marker foldlevel=0 nowrap:
