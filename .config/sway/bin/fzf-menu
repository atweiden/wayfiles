#!/bin/bash

# -----------------------------------------------------------------------------
# fzf-menu: select binary to launch
#
# Credit: https://gist.github.com/MahouShoujoMivutilde/b1fa83bc234b68dd164cb6e843965d75?permalink_comment_id=4331478#gistcomment-4331478
# -----------------------------------------------------------------------------

compgen -c \
  | grep --invert-match fzf \
  | sort --unique \
  | fzf --header 'fzf Menu' \
        --height 100% \
        --layout reverse \
        --cycle \
        --preview-window sharp \
        --preview-window 70% \
        --prompt 'filter: ' \
        --bind ctrl-k:preview-up \
        --bind ctrl-j:preview-down \
  | xargs --no-run-if-empty swaymsg --type command exec

# vim: set filetype=sh foldmethod=marker foldlevel=0 nowrap:
